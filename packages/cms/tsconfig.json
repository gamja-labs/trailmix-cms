{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "./dist"
    ],
    "references": [
        {
            "path": "../models"
        },
        {
            "path": "../db"
        }
    ]
}